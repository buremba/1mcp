    "undici": "^7.0.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "jose": "^5.2.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "nanoid": "^5.0.0",
    "esbuild": "^0.24.0",
    "fflate": "^0.8.2",
    "quickjs-emscripten": "^0.30.0",
    "pyodide": "^0.27.0",
    "tldts": "^6.1.0",
    "ipaddr.js": "^2.2.0",
    "@1mcp/shared": "workspace:*"
