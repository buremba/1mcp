{
  "name": "1mcp",
  "version": "0.1.0",
  "description": "MCP server with sandboxed JavaScript/Python execution using QuickJS and Pyodide",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "1mcp": "./dist/cli/index.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "javascript",
    "python",
    "quickjs",
    "pyodide",
    "sandbox",
    "code-execution"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/1mcp"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "kleur": "^4.1.5",
    "open": "^10.0.0",
    "hono": "^4.0.0",
