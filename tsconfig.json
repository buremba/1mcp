{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "baseUrl": ".",
    "paths": {
      "@relay-mcp/server": ["packages/server/src/index.ts"],
      "@relay-mcp/server/*": ["packages/server/src/*"],
      "@relay-mcp/browser-harness": ["packages/browser-harness/src/index.ts"],
      "@relay-mcp/browser-harness/*": ["packages/browser-harness/src/*"],
      "@relay-mcp/shared": ["packages/shared/src/index.ts"],
      "@relay-mcp/shared/*": ["packages/shared/src/*"]
    }
  },
  "include": ["packages/*/src/**/*", "website/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
